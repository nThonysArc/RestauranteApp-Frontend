<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="card" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectopos.restauranteappfrontend.controllers.TableManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Gestión de Mesas" styleClass="h2" />

        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Nº Mesa:" />
                <TextField fx:id="numeroMesaField" promptText="Ej: 11" prefWidth="80"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Capacidad:" />
                <TextField fx:id="capacidadField" promptText="Ej: 4" prefWidth="80"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Estado:" />
                <ComboBox fx:id="estadoComboBox" prefWidth="150"/>
            </VBox>
            <VBox alignment="BOTTOM_LEFT">
                <Button fx:id="guardarBtn" text="Guardar Mesa" onAction="#handleGuardar" styleClass="btn-primary"/>
            </VBox>
            <VBox alignment="BOTTOM_LEFT">
                <Button fx:id="limpiarBtn" text="Limpiar" onAction="#handleLimpiar" styleClass="btn-secondary"/>
            </VBox>
        </HBox>
        
        <Label fx:id="statusLabel" text="" />

        <Label text="Mesas Actuales" styleClass="h3" />
        <TableView fx:id="mesasTableView" VBox.vgrow="ALWAYS">
             <columns>
                 <TableColumn fx:id="colNumero" text="Nº Mesa" prefWidth="100"/>
                 <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="100"/>
                 <TableColumn fx:id="colEstado" text="Estado Actual" prefWidth="150"/>
                 <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200"/>
             </columns>
             <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
             <placeholder>
                 <Label text="Cargando mesas..."/>
             </placeholder>
        </TableView>
    </children>
</VBox>