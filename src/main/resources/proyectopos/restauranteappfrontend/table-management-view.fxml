<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.75" styleClass="root" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectopos.restauranteappfrontend.controllers.TableManagementController">
   <items>
      <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #e0e0e0;">
         <content>
            <Pane fx:id="restaurantePlano" prefHeight="2000.0" prefWidth="2000.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-width: 1;">
               </Pane>
         </content>
      </ScrollPane>

      <VBox spacing="15.0" style="-fx-background-color: #f4f4f4;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label styleClass="h3" text="Editor de Plano" />
            <Separator />
            
            <Label style="-fx-font-weight: bold;" text="Agregar Elementos:" />
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#agregarMesaRectangular" styleClass="btn-primary" text="+ Mesa [ ]" />
                  <Button onAction="#agregarMesaRedonda" styleClass="btn-primary" text="+ Mesa O" />
               </children>
            </HBox>
            <Button maxWidth="Infinity" onAction="#agregarObstaculo" styleClass="btn-warning" text="+ Pared / Estructura" />
            
            <Separator />
            <Label style="-fx-font-weight: bold;" text="Propiedades Selección:" />
            
            <VBox fx:id="panelPropiedades" disable="true" spacing="10.0">
               <Label text="Número Mesa / ID:" />
               <TextField fx:id="propNumeroField" />
               
               <Label text="Capacidad (Personas):" />
               <TextField fx:id="propCapacidadField" />
               
               <Label text="Ancho (px):" />
               <Slider fx:id="propWidthSlider" max="300" min="20" />
               
               <Label text="Alto (px):" />
               <Slider fx:id="propHeightSlider" max="300" min="20" />

               <Label text="Rotación (Grados):" />
               <Slider fx:id="propRotationSlider" max="360" min="0" />
               
               <Label text="Tipo:" />
               <ComboBox fx:id="propTipoCombo" maxWidth="Infinity" />

               <HBox spacing="10" alignment="CENTER">
                   <Button fx:id="btnEliminar" text="Eliminar" styleClass="btn-danger" onAction="#eliminarSeleccion"/>
               </HBox>
            </VBox>

            <Separator />
            <VBox alignment="BOTTOM_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <Label fx:id="statusLabel" text="Listo" wrapText="true" />
               <Button maxWidth="Infinity" onAction="#guardarCambios" style="-fx-font-size: 14px;" styleClass="btn-success" text="GUARDAR CAMBIOS DEL PLANO" />
            </VBox>
         </children>
      </VBox>
   </items>
</SplitPane>