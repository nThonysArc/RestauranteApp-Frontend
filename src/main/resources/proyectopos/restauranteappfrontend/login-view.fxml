<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- CLAVE 1: VINCULACIÓN DEL CONTROLADOR -->
<BorderPane
        xmlns="http://javafx.com/javafx/20.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="proyectopos.restauranteappfrontend.controllers.LoginController"
        prefHeight="600.0" prefWidth="800.0"
        styleClass="background"> <!-- Clase CSS para un fondo claro -->

  <!-- Contenedor central para centrar el formulario de login -->
  <center>
    <VBox alignment="CENTER" spacing="20.0" maxWidth="350.0" styleClass="card"> <!-- Clase CSS de tarjeta Bootstrap -->
      <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
      </padding>

      <!-- Título de la Aplicación -->
      <Label text="Restaurante POS">
        <font>
          <Font name="System Bold" size="24.0" />
        </font>
        <VBox.margin>
          <Insets bottom="10.0" />
        </VBox.margin>
      </Label>

      <!-- Mensaje de Bienvenida o Error -->
      <!-- CLAVE 2: fx:id para mostrar mensajes del controlador -->
      <Label fx:id="messageLabel" text="Por favor, inicie sesión" styleClass="lbl-info" />

      <!-- Campo de Usuario -->
      <TextField
              fx:id="usernameField"
              promptText="Nombre de Usuario"
              prefHeight="40.0"
              styleClass="text-input" />

      <!-- Campo de Contraseña -->
      <PasswordField
              fx:id="passwordField"
              promptText="Contraseña"
              prefHeight="40.0"
              styleClass="text-input" />

      <!-- Botón de Iniciar Sesión -->
      <!-- CLAVE 3: Añadimos la clase btn-primary para el color principal -->
      <Button
              fx:id="loginButton"
              onAction="#onLoginButtonClick"
              text="Iniciar Sesión"
              prefHeight="40.0"
              prefWidth="350.0"
              styleClass="btn-primary" />

    </VBox>
  </center>
</BorderPane>
