<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proyectopos.restauranteappfrontend.controllers.LoginController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="login-background">

    <center>
        <VBox alignment="CENTER" spacing="20.0" maxWidth="350.0" styleClass="login-card">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label text="Ra칤z Ique침a" styleClass="titulo-app">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <Label fx:id="messageLabel" text="Por favor, inicie sesi칩n" styleClass="login-lbl-info" />

            <TextField fx:id="usernameField"
                       promptText="Nombre de Usuario"
                       prefHeight="40.0"
                       styleClass="login-input" />

            <!-- Contenedor StackPane para superponer el bot칩n del ojo -->
            <StackPane alignment="CENTER_RIGHT">
                <children>
                    <!-- Campo de texto visible (inicialmente oculto y no gestionado por el layout) -->
                    <TextField fx:id="passwordTextField"
                               promptText="Contrase침a"
                               prefHeight="40.0"
                               styleClass="login-input"
                               visible="false"
                               managed="false"/>

                    <!-- Campo de contrase침a oculto (visible por defecto) -->
                    <PasswordField fx:id="passwordField"
                                   promptText="Contrase침a"
                                   prefHeight="40.0"
                                   styleClass="login-input" />

                    <!-- Bot칩n del Ojo -->
                    <Button fx:id="togglePasswordBtn"
                            onAction="#togglePasswordVisibility"
                            text="游녜"
                            style="-fx-background-color: transparent; -fx-cursor: hand; -fx-text-fill: gray; -fx-font-size: 14px;">
                        <StackPane.margin>
                            <Insets right="5.0"/>
                        </StackPane.margin>
                    </Button>
                </children>
            </StackPane>

            <!-- CheckBox para recordar sesi칩n -->
            <CheckBox fx:id="rememberMeCheckBox"
                      text="Recordar usuario y contrase침a"
                      style="-fx-text-fill: #6b7280; -fx-font-size: 12px; -fx-cursor: hand;" />

            <Button fx:id="loginButton"
                    onAction="#onLoginButtonClick"
                    text="Iniciar Sesi칩n"
                    prefHeight="40.0"
                    prefWidth="350.0"
                    styleClass="btn-login">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>

        </VBox>
    </center>
</BorderPane>